<div class="container overlay">
    <div class="row" style="width: 100%">
        <div class="col s12 m3">
        </div>
        <div class="col s12 m6">
            <div class="card center-align">
                <div class="card-content">
                    <div class="card-title ">
                        <span class="padTopBottom">
                            Iniciar Sesión
                        </span>                
                    </div>
                    <form id="login">
                        <div class="input-field">
                            <i class="material-icons prefix">account_circle</i>
                            <label for="nickname">Nombre de usuario</label>
                            <input type="text" required class="validate" autofocus id="nickname" name="nickname">
                        </div>
                        <div class="input-field">
                            <i class="material-icons prefix">lock</i>                            
                            <label for="txtPassword">Contraseña</label>
                            <input type="password" required class="validate" id="txtPassword" name="txtPassword">
                        </div>
                        <input type="submit" value="iniciar sesión" class="btn btn-block waves-effect waves-light">
                    </form>
                    <a href="/registro" class="btn btn-block padTopBottom btn-flat waves-effect waves-light">Registrarse</a>                    
                </div>
            </div>
        </div>
    </div>
</div>
<script src="js/login.js"></script>